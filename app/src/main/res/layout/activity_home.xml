<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <!-- Banner with centered text -->
    <TextView
        android:id="@+id/textBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="Employee"
        android:textColor="@color/black"
        android:textSize="32sp"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Home Page"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iconBell"
            android:layout_width="27dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="Bell Icon"
            android:src="@drawable/bell" />
    </RelativeLayout>

    <!-- Button to Return Home -->
    <Button
        android:id="@+id/btnReturnHome"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/border"
        tools:ignore="HardcodedText" />

    <!-- Container for the new buttons vertically stacked -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnOption1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:text="Calendar"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnOption2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:text="View My Details"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Third New Button -->
        <Button
            android:id="@+id/btnOption3"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>