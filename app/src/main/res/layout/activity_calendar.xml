<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    >

    <TextView
        android:id="@+id/textBanner"
        android:layout_width="415dp"
        android:layout_height="40dp"
        android:background="@color/grey_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="Employee"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_gravity="top"
    />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/textCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Calendar"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <ImageView
            android:id="@+id/iconBell"
            android:layout_width="27dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="Bell Icon"
        android:src="@drawable/bell" />
    </RelativeLayout>

    <!-- Button to Return Home -->
    <Button
        android:id="@+id/btnReturnHome"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:text="Return to Homepage"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/border"
        android:layout_gravity="left"
         />


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="480dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#5774c5"
        android:padding="20dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/textRemainingHolidayDays"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Remaining Holiday Days Left: 30"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_gravity="center"
       />

</LinearLayout>
